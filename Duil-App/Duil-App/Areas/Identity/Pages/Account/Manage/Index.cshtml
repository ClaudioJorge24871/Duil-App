@page
@model IndexModel
@using Duil_App.Resources
@{
    ViewData["Title"] = Resource.DadosPEssoais;
    ViewData["ActivePage"] = ManageNavPages.Index;
    ViewData["BodyClass"] = "paginas-index-fundo";
}

<div class="container pt-3 px-5">
    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="mb-4">
        <h3 style="display:inline">@Resource.youDP</h3>
        <i class="ms-3 bi bi-person-lines-fill text-secondary"></i>
        <hr class="mt-2 mb-4" />
    </div>

    <form id="profile-form" method="post">
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="Email" class="form-label fw-semibold">Email</label>
                <input asp-for="Email" class="form-control" disabled />
            </div>
            <div class="col-md-6">
                <label asp-for="Input.Nome" class="form-label fw-semibold">@Resource.Nome</label>
                <input asp-for="Input.Nome" class="form-control" />
                <span asp-validation-for="Input.Nome" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Pais" class="form-label fw-semibold">@Resource.Pais</label>
                <input asp-for="Pais" class="form-control" disabled />
            </div>
            <div class="col-md-6">
                <label asp-for="Input.Morada" class="form-label fw-semibold">@Resource.Morada</label>
                <input asp-for="Input.Morada" class="form-control" />
                <span asp-validation-for="Input.Morada" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Input.CodPostal" class="form-label fw-semibold">@Resource.CodPostal</label>
                <input asp-for="Input.CodPostal" class="form-control" />
                <span asp-validation-for="Input.CodPostal" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Input.Telemovel" class="form-label fw-semibold">@Resource.Telemovel</label>
                <input asp-for="Input.Telemovel" class="form-control" />
                <span asp-validation-for="Input.Telemovel" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-4 text-end">
            <button id="update-profile-button" type="submit" class="btn px-4 py-2 navbar-blue text-white rounded-3">
                @Resource.GuardarAlteracoes
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
