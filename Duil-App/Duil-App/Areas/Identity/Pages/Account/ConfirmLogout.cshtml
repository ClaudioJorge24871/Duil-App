@page
@model ConfirmLogoutModel
@using Duil_App.Resources
@{
    ViewData["Title"] = Resource.ConfirmarLogOut;
    ViewData["HideNavbar"] = true;
}

<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        overflow: hidden;
    }
</style>

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="text-center">
        <h2>@Resource.TerminarSessao</h2>
        <p>@Resource.CertezaLogOut</p>

        <form method="post">
            <button type="submit" class="btn btn-danger m-2">@Resource.SimLogOut</button>
            <a asp-page="/Index" class="btn btn-secondary m-2">@Resource.Cancelar</a>
        </form>
    </div>
</div>
