@page
@model ConfirmEmailModel
@using Duil_App.Resources

@{
    ViewData["Title"] = Resource.ConfirmarEmail;
}

<div class="container d-flex flex-column justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="card shadow-sm p-4 rounded-4 text-center" style="max-width: 500px; width: 100%;">
        <h2 class="mb-3 text-primary texto-cor-pink">@ViewData["Title"]</h2>

        <partial name="_StatusMessage" model="Model.StatusMessage" />

        <p class="text-muted mt-4 mb-0">
            @Resource.SeraRedirec <span id="counter" class="fw-bold text-dark">3</span> @Resource.segundos...
        </p>
    </div>
</div>

@section Scripts {
    <script>
        let counter = 3;
        const interval = setInterval(function () {
            counter--;
            document.getElementById('counter').textContent = counter;
            if (counter === 0) {
                clearInterval(interval);
                window.location.href = '/Identity/Account/Login';
            }
        }, 1000);
    </script>
}
