@page
@model RegisterModel

@{
    ViewData["Title"] = "Registar-se";
}

<h1>@ViewData["Title"]</h1>
<div asp-validation-summary="All" class="text-danger" role="alert"></div>

<div class="row">
    <div class="col-md-10">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <br />
            <div class="row">
                <div class="col-md-5">
                    <div class="form-floating mb-4">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Palavra-passe</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword">Confirmar palavra-passe</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.Nome" class="form-control" />
                        <label asp-for="Input.Nome"></label>
                        <span asp-validation-for="Input.Nome" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-5">

                    <div class="form-floating mb-4">
                        <input asp-for="Input.CodPostal" class="form-control" />
                        <label asp-for="Input.CodPostal"></label>
                        <span asp-validation-for="Input.CodPostal" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <select asp-for="Input.Pais" class="form-select" asp-items="Model.ListaPaises">
                            <option value="">Selecione um país</option>
                        </select>
                        <label asp-for="Input.Pais">País</label>
                        <span asp-validation-for="Input.Pais" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.NIF" class="form-control" />
                        <label asp-for="Input.NIF"></label>
                        <span asp-validation-for="Input.NIF" class="text-danger"></span>
                    </div>


                    <div class="form-floating mb-4">
                        <input asp-for="Input.Telemovel" class="form-control" />
                        <label asp-for="Input.Telemovel"></label>
                        <span asp-validation-for="Input.Telemovel" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <button id="registerSubmit" type="submit" class="w- btn btn-lg btn-primary">Confirmar registo</button>
        </form>

    </div>
    <div class="col-md-6 col-md-offset-2">
        
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
