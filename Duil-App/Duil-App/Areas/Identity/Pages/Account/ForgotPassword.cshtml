@page
@model ForgotPasswordModel
@using Duil_App.Resources
@{
    ViewData["Title"] = Resource.esqueceu;
}

<h2>@ViewData["Title"]</h2>
<h3>@Resource.Insiraemail</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder=@Resource.EmailExemplo />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">@Resource.GuardarAlteracoes</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
