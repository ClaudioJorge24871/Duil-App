@model Duil_App.Models.Clientes

@{
	ViewData["Title"] = "Edit";
}

<div>
	<a asp-action="Index"><i class="bi bi-arrow-left fs-3 ms-3" style="color:#6B97AC"></i></a>
</div>

<div class="d-flex justify-content-center mt-5 min-vh-100">
	<div class="container mt-5" style="width:80%">
		<h3 class="mb-2 grey-text">Editar informações de @Html.DisplayFor(Model => Model.Nome)</h3>
		<hr />
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="row mt-5">
				<div class="col-md-5 me-5">
					<div class="form-group mb-3">
						<input asp-for="Nome" class="form-control" placeholder="Nome *" />
						<span asp-validation-for="Nome" class="text-danger"></span>
					</div>
					<input asp-for="Nif" class="form-control mb-3" readonly />
					<div class="form-group mb-3">
						<input asp-for="Email" class="form-control" placeholder="Email" />
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
					<div class="form-group mb-3">
						<input asp-for="Telemovel" class="form-control" placeholder="Telemóvel" />
						<span asp-validation-for="Telemovel" class="text-danger"></span>
					</div>
					<div class="form-group mb-3">
						<input type="submit" value="Guardar Alterações" class="btn btn-custom mt-3" />
					</div>
				</div>

				<div class="col-md-5 ms-2">
					<div class="form-group mb-3">
						<input asp-for="Morada" class="form-control" placeholder="Morada" />
						<span asp-validation-for="Morada" class="text-danger"></span>
					</div>
					<div class="form-group mb-3">
						<input asp-for="CodPostal" class="form-control" placeholder="Código postal" />
						<span asp-validation-for="CodPostal" class="text-danger"></span>
					</div>
					<div class="form-group mb-3">
						<input asp-for="MoradaCarga" class="form-control" placeholder="Morada de carga" />
						<span asp-validation-for="MoradaCarga" class="text-danger"></span>
					</div>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<input asp-for="Pais" class="form-control" readonly />
					<p class="text-danger mt-4">* é de preenchimento obrigatório</p>
				</div>
			</div>
		</form>
	</div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
