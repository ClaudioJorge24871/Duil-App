@model Duil_App.Models.Clientes

@{
    ViewData["Title"] = "Details";
}


<div>
    <h3 style="font-weight: bold">@Html.DisplayFor(model => model.Nome)</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nif)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nif)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @(string.IsNullOrWhiteSpace(Model.Nome) ? "Sem informação" : Model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Morada)
        </dt>
        <dd class = "col-sm-10">
            @(string.IsNullOrWhiteSpace(Model.Morada) ? "Sem informação" : Model.Morada)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MoradaCarga)
        </dt>
        <dd class="col-sm-10">
            @(string.IsNullOrWhiteSpace(Model.MoradaCarga) ? "Sem informação" : Model.MoradaCarga)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pais)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pais)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CodPostal)
        </dt>
        <dd class = "col-sm-10">
            @(string.IsNullOrWhiteSpace(Model.CodPostal) ? "Sem informação" : Model.CodPostal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telemovel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telemovel)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(Model => Model.Email)
        </dt>
        <dd class="col-sm-10">
            @(string.IsNullOrWhiteSpace(Model.Email) ? "Sem informação" : Model.Email)
        </dd>
        
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Nif">Editar</a> |
    <a asp-action="Index">Voltar</a>
</div>
