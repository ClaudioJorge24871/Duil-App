@model Duil_App.Models.Pecas
@using Duil_App.Resources

@{
	ViewData["Title"] = Resource.detalhesTexto;
}

<div>
	<a asp-action="Index"><i class="bi bi-arrow-left fs-3 ms-3" title=@Resource.voltarTexto style="color:#6B97AC"></i></a>
</div>

<div class="w-50" style="margin-left:10%; margin-top:5%">
	<h3 style="display:inline;">@Resource.DetalhesPeca @Model.Referencia</h3>
	<a asp-action="Edit" asp-route-id="@Model?.Id" title=@Resource.modificarTexto><i class="ms-3 bi bi-pencil-fill"></i></a>
	<hr class="mb-5" />
	<div class="row">
		<div class="col-md-8">
			<dl class="row">
				<dt class="col-sm-4 mb-3">
					@Html.DisplayNameFor(model => model.Referencia)
				</dt>
				<dd class="col-sm-5 mb-3">
					@Html.DisplayFor(model => model.Referencia)
				</dd>
				<dt class="col-sm-4 mb-3">
					@Html.DisplayNameFor(model => model.Designacao)
				</dt>
				<dd class="col-sm-5 mb-3">
					@Html.DisplayFor(model => model.Designacao)
				</dd>
				<dt class="col-sm-4 mb-3">
					@Html.DisplayNameFor(model => model.PrecoUnit)
				</dt>
				<dd class="col-sm-5 mb-3">
					@Html.DisplayFor(model => model.PrecoUnit)
				</dd>
				<dt class="col-sm-4 mb-3">
					@Html.DisplayNameFor(model => model.Fabrica)
				</dt>
				<dd class="col-sm-5 mb-3">
					@Html.DisplayFor(model => model.Fabrica.Nome)
				</dd>
				<dt class="col-sm-4 mb-3">
					@Html.DisplayNameFor(model => model.Cliente)
				</dt>
				<dd class="col-sm-5 mb-3">
					@Html.DisplayFor(model => model.Cliente.Nome)
				</dd>
			</dl>
		</div>
		<div class="col-sm-3 ms-0">
			@if (!string.IsNullOrEmpty(Model.Imagem))
			{
				<img src="@Url.Content($"~/images/{Model.Imagem}")" class="img-fluid" style="max-width: 300px;" alt=@Resource.ImagemdoclientePeca />
			}
			else
			{
				<img src="@Url.Content("~/images/Default_Image.jpg")" class="img-fluid" style="max-width: 300px;" alt=@Resource.ImagempadraoPeca />
			}
		</div>
	</div>

</div>
