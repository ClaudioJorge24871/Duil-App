<!DOCTYPE html>
<html lang="pt-pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Duil</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
</head>
<body>
    <header>
        @if (ViewData["HideNavbar"] == null || !(bool)ViewData["HideNavbar"])
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand align-content-center" asp-area="" asp-controller="Home" asp-action="Index">Duil</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item d-flex align-items-center ms-5">
                                @if (!(User.IsInRole("Admin") || User.IsInRole("Funcionario") || User.IsInRole("Cliente")))
                                {
                                   <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Termos e Políticas</a>
                                }
                                
                            </li>

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Utilizadores" asp-action="Index">Gerir Utilizadores</a>
                                </li>
                            }
                            @if (User.IsInRole("Admin") || User.IsInRole("Funcionario"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Encomendas" asp-action="Index">Encomendas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Fabricas" asp-action="Index">Fabricas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Pecas" asp-action="Index">Pecas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
                                </li>
                            }
                            @if (User.IsInRole("Cliente"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Encomendas" asp-action="Create"> Criar Encomenda</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Encomendas" asp-action="Index">Registo de Encomendas</a>
                                </li>
                            }
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        }
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    @if (ViewData["HideNavbar"] == null || !(bool)ViewData["HideNavbar"])
    {
        <footer class="border-top footer text-muted mb-3 w-100" style="position: absolute; bottom: 0;">
            <div class="container">
                &copy; 2025 - Duil - <a asp-area="" asp-controller="Home" asp-action="Privacy">Termos e Políticas</a>
            </div>
        </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.0/signalr.min.js"></script>
    <!--Funcionarios recebem a notificação em todas as páginas que utilizem o Layout-->
    <script>
        const connection = new signalR.HubConnectionBuilder().withUrl("/realtimehub").build();

        connection.on("ReceberNotificacao", (data) => {
            alert(`Nova encomenda de ${data.nomeCliente}\nData: ${data.data}\nTotal: ${data.precoTotal}€\nQuantidade: ${data.quantidadeTotal}`);
        });

        connection.start().catch(err => console.error(err.toString())); 
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

