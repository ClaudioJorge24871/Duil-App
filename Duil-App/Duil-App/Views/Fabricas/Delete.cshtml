@model Duil_App.Models.Fabricas
@using Duil_App.Resources

@{
	ViewData["Title"] = Resource.ApagarFabricaViewTitle;
}
<div>
	<a asp-action="Index"><i class="bi bi-arrow-left fs-3 ms-3" tilte=@Resource.voltarTexto style="color:#6B97AC"></i></a>
</div>

<div class="w-50" style="margin-left:10%; margin-top:5%">
	<h3>@Resource.TemACertezaQueDesejaApagar @Resource.Fabrica?</h3>
	<div>
		<hr class="mb-5" />
		<dl class="row mt-4">
			<dt class="col-sm-4 mb-3">
				@Html.DisplayNameFor(model => model.Nif)
			</dt>
			<dd class="col-sm-5 mb-3">
				@Html.DisplayFor(model => model.Nif)
			</dd>
			<dt class="col-sm-4 mb-3">
				@Html.DisplayNameFor(model => model.Nome)
			</dt>
			<dd class="col-sm-5 mb-3">
				@(string.IsNullOrWhiteSpace(Model.Nome) ? Resource.semInfo: Model.Nome)
			</dd>
			<dt class="col-sm-4 mb-3">
				@Html.DisplayNameFor(model => model.Morada)
			</dt>
			<dd class="col-sm-5 mb-3">
				@(string.IsNullOrWhiteSpace(Model.Morada) ? Resource.semInfo : Model.Morada)
			</dd>
			<dt class="col-sm-4 mb-3">
				@Html.DisplayNameFor(model => model.MoradaDescarga)
			</dt>
			<dd class="col-sm-5 mb-3">
				@(string.IsNullOrWhiteSpace(Model.MoradaDescarga) ? Resource.semInfo : Model.MoradaDescarga)
			<dt class="col-sm-4 mb-3">
					@Html.DisplayNameFor(model => model.Pais)
			</dt>
			<dd class="col-sm-5 mb-3">
					@Html.DisplayFor(model => model.Pais)
			</dd>
			<dt class="col-sm-4 mb-3">
					@Html.DisplayNameFor(model => model.CodPostal)
			</dt>
			<dd class="col-sm-5 mb-3">
					@(string.IsNullOrWhiteSpace(Model.CodPostal) ? Resource.semInfo : Model.CodPostal)
			</dd>
			<dt class="col-sm-4 mb-3">
					@Html.DisplayNameFor(model => model.Telemovel)
			</dt>
			<dd class="col-sm-5 mb-3">
					@Html.DisplayFor(model => model.Telemovel)
			</dd>
			<dt class="col-sm-4 mb-3">
					@Html.DisplayNameFor(model => model.Email)
			</dt>
			<dd class="col-sm-5 mb-3">
					@(string.IsNullOrWhiteSpace(Model.Email) ? Resource.semInfo : Model.Email)
			</dd>
		</dl>
	</div>

	<form asp-action="Delete">
		<input type="hidden" asp-for="Nif" />
		<input type="submit" value=@Resource.Remover class="btn btn-danger" />
	</form>
</div>
